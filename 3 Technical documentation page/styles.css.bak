body{
  font-family: Arial ;
  
}
h1 {
  margin: 20px auto;
  text-align: center;
  font-size: 250%;
  
}
header {
  font-weight: bold;
  font-size: 120%;
  padding: 5px;
}
  
#main-doc {
  text-indent: -10px;
  display: box;
  margin-left: 300px;
  overflow: hidden;
  padding-left: 140px;
  padding-right: 140px;
  
}
section {
  padding: 15px; 
  font-size: 18px;
}
p{
  margin: 0 auto;
  text-indent: 10px;
  text-align: justify;
  margin: 0 -5px 0 -5px;
}
#navbar {
  position: fixed;
  display: box;
  min-width: 270px;
  left: 0px;
  width: 270px;
  height: 100%;
  border-right: solid;
  border-color: SlateGray);
}
#navbar ul {
  height: 88%;
  padding: 0;
  overflow-y: auto;
  overflow-x: hidden;
}

#navbar li {
  color: #4d4e53;
  border-top: 1px solid;
  list-style: none;
  position: relative;
  width: 100%;
}
#navbar a {
  display: block;
  padding: 10px 30px;
  color: #4d4e53;
  text-decoration: none;
  cursor: pointer;
}
  code {
  display: block;
  text-align: left;
  white-space: pre-line;
  position: relative;
  word-break: normal;
  word-wrap: normal;
  line-height: 2;
  background-color: #f7f7f7;
  padding: 15px;
  margin: 10px;
  border-radius: 5px;
}

@media only screen and (max-width: 1200px)
{
  #main-doc{
  font-size: 16px;
  padding-left: 10px;
  padding-right: 10px;
  }
  section {
  padding: 15px; 
  font-size: 14px;
}
}
